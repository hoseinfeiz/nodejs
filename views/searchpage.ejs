
<!doctype html>
<html lang="en">
  <%- include('styles/head')  %>

  <body>

    <div class="container">
      
      <%- include('styles/categories')  %>

      <div class="row mb-2">
        <% posts.forEach(post => { %>
          <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
              <div class="card-body d-flex flex-column align-items-start">
                
                <strong class="d-inline-block mb-2 text-primary"><% catsArr.forEach(cat => {if(cat.id == post.category_id){ %> <%= cat.name %> <% }}); %></strong>
                <h3 class="mb-0">
                  <a class="text-dark" href="/post/<%= post.id  %>"><%= post.title.substr(0,50)  %></a>
                </h3>
                <div class="mb-1 text-muted"><%= post.created_at  %></div>
                <p class="card-text mb-auto"><%= post.description.substr(0,100)  %></p>
                <a href="#">Continue reading</a>
              </div>
              <img style="width: 70px;height: 100px;" class="card-img-right flex-auto d-none d-md-block" src="/assets/images/news.jpg" alt="Card image cap">
            </div>
          </div>
        <% }); %>
        
        
      </div>
    </div>

    <main role="main" class="container">
      <div class="row">


       <%- include('styles/sidebar')  %>

      </div><!-- /.row -->

    </main><!-- /.container -->

    <%- include('styles/footer')  %>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="../../assets/js/vendor/popper.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
    <script src="../../assets/js/vendor/holder.min.js"></script>
    <script>
      Holder.addTheme('thumb', {
        bg: '#55595c',
        fg: '#eceeef',
        text: 'Thumbnail'
      });
    </script>
  </body>
</html>

